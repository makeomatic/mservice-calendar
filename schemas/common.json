{
  "$id": "common.json",
  "definitions": {
    "token": {
      "type": "string",
      "description": "Auth token"
    },
    "tag": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z\\-0-9]+$"
        },
        "eng": {
          "type": "string"
        },
        "icon": {
          "type": "string",
          "format": "uri"
        },
        "cover": {
          "type": "string",
          "format": "uri"
        },
        "priority": {
          "type": "integer",
          "default": 0
        },
        "section": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "event": {
      "type": "object",
      "properties": {
        "tz": {
          "type": "string"
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Event hosts, e.g. DJs"
        },
        "subscribers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Event attendants"
        },
        "notifications": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Subscribers to be notified about event changes or time"
        },
        "title": {
          "type": "string",
          "minLength": 3,
          "description": "Event name"
        },
        "description": {
          "type": "string",
          "minLength": 3,
          "description": "Event description"
        },
        "picture": {
          "type": "string",
          "description": "Event image",
          "format": "uri"
        },
        "link": {
          "type": "string",
          "description": "Additional link",
          "format": "uri"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Tags to search events"
        },
        "rrule": {
          "type": "string",
          "description": "RRule to describe event recurrence. See https://github.com/jkbrzt/rrule"
        },
        "duration": {
          "type": "integer",
          "minimum": 1,
          "description": "Event duration, in minutes"
        }
      }
    }
  }
}
